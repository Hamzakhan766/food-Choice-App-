<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserCredentials.myInformation">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="10dp">

            <ImageView
                android:id="@+id/infoback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/custom_font_regular"
                android:text="My Information"
                android:textColor="@color/color_secondary"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout5"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mtInfoImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/welcome" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="17dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_buttons"
                android:padding="9dp"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/name"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/infoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/custom_font_regular"
                    android:text="@string/my_info"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"
                    tools:ignore="RelativeOverlap" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myInfoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_buttons"
                android:padding="9dp"
                android:layout_marginTop="9dp"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/infoUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/custom_font_regular"
                    android:text="@string/my_info"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"
                    tools:ignore="RelativeOverlap" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_buttons"
                android:padding="9dp"
                android:layout_marginTop="9dp"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/email"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/myInfoEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/custom_font_regular"
                    android:text="@string/my_info"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"
                    tools:ignore="RelativeOverlap" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_buttons"
                android:padding="9dp"
                android:layout_marginTop="9dp"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/telephone"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/myInfoPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/custom_font_regular"
                    android:text="@string/my_info"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"
                    tools:ignore="RelativeOverlap" />


            </RelativeLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>